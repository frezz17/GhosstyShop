FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV TZ=Europe/Kiev

WORKDIR /app

# Оновлення системи та встановлення залежностей
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    python3-dev \
    libffi-dev \
    libssl-dev \
    tzdata \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Встановлення часового поясу
RUN ln -snf /usr/share/zoneinfo/$TZ /etc/localtime && echo $TZ > /etc/timezone

# Копіювання requirements.txt та встановлення залежностей
COPY requirements.txt .
RUN pip install --no-cache-dir --upgrade pip \
    && pip install --no-cache-dir -r requirements.txt

# Копіювання додатку
COPY . .

# Створення директорії для даних та надання прав
RUN mkdir -p /app/data && chmod -R 755 /app

# Змінна середовища для безпеки (токен можна передати при запуску)
ENV BOT_TOKEN=""

# Команда запуску (передаємо токен як аргумент)
CMD ["python", "main.py"]
